<view class="cu-custom " style="height:{{CustomBar}}px">
	<view class="cu-bar bg-redOrange fixed {{bgImage!=''?'none-bg text-black bg-img':''}} {{bgColor}}" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
		<view class="margin-left text-xl  text-white">
			<text>流浪者速递</text>
		</view>
	</view>
</view>
<view class=" margin-sm shadow">
	<swiper class="screen-swiper round-dot  " indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
		<swiper-item wx:for="{{imgList}}" wx:key>
			<image style="border-radius:7px" src="{{item.url}}" mode='scaleToFill'></image>
		</swiper-item>
	</swiper>
</view>




<view class="flex bg-white align-center padding margin-sm justify-between shadow" style="border-radius:7px">
	<view style="width:100%">
		<view class="flex align-center justify-between" >
			<view class="flex align-center" style="width:80%" bindtap="addAddress" data-type="1">
				<view class="cu-tag bg-red radius">
					寄
				</view>
				<view class="margin-left" >
					<view wx:if="{{sendInfo.addresseeName==null}}">
						<view class="text-lg text-bold text-black">寄件人信息</view>
						<view class="text-sm margin-top text-gray">请填写真实姓名</view>
					</view>
					<view wx:else>
						<view>{{sendInfo.addresseeName}} {{sendInfo.phoneNumber}}</view>
						<view>{{sendInfo.provinceName}}{{sendInfo.cityName}}{{sendInfo.cityName}}{{sendInfo.addressdetail}}</view>
					</view>
				</view>
			</view>
			<view class="padding-left-sm text-blue" style="border-left:1px solid #eee" bindtap="sendPost">
				地址簿
			</view>
		</view>
		<view class="flex align-center" style="padding-left:26rpx">
			<view style="height:80rpx;width:1rpx;border-left:1px dashed #aaaaaa"></view>
			<view class="margin-left" style="height:1rpx;width:90%;border-bottom:1px solid #eee;margin-left:30px"></view>
			<view></view>
		</view>
		<view>
			<view class="flex align-center justify-between" >
				<view class="flex align-center" style="width:80%" bindtap="addAddress" data-type="2">
					<view class="cu-tag bg-blue radius">
						收
					</view>
					<view class="margin-left" >
						<view wx:if="{{receiveInfo.addresseeName==null}}">
							<view class="text-lg text-bold text-black">收件人信息</view>
							<view class="text-sm margin-top text-gray">请填写真实姓名</view>
						</view>
						<view wx:else>
							<view>{{receiveInfo.addresseeName}} {{receiveInfo.phoneNumber}}</view>
							<view>{{receiveInfo.provinceName}}{{receiveInfo.cityName}}{{receiveInfo.cityName}}{{receiveInfo.addressdetail}}</view>
						</view>
					</view>
				</view>
				<view class="padding-left-sm text-blue" style="border-left:1px solid #eee" bindtap="receive">
					地址簿
				</view>
			</view>

		</view>
	</view>
</view>

<view class="flex justify-center">
	<button class="cu-btn round bg-redOrange lg shadow" bindtap="order">立即下单</button>
</view>

<view class="cu-modal justify-start bottom-modal {{modalName=='GroupViewModal'?'show':''}}" bindtap="hideModal" style='overflow: hidden;text-align: left;'>
	<view class="cu-dialog" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
		<!-- 顶部固定卡片区域 -->
		<view class="col-2 grid padding">
			<view bindtap="select" class="flex justify-center">
				<view class="text-center">
					<view>寄件人地址</view>
					<view class="flex justify-center margin-top-xs" wx:if="{{flag}}">
						<view style="height:2px;width:50px;" class="bg-red round"></view>
					</view>
				</view>
			</view>
			<view bindtap="select1" class="flex justify-center">
				<view class="text-center">
					<view>收件人地址</view>
					<view class="flex justify-center margin-top-xs" wx:if="{{flag1}}">
						<view style="height:2px;width:50px;" class="bg-red round"></view>
					</view>
				</view>
			</view>
		</view>
		<scroll-view scroll-y style="height:611px">
			<view wx:for="{{addressList}}" wx:key="item.id">
				<view class="bg-white margin " style="border-radius:7px">
					<view class="padding-sm" style="line-height:45rpx" bindtap="selectAddress" data-item="{{item}}">
						<view class="text-lg text-bold">{{item.addresseeName}},{{item.phoneNumber}}</view>
						<view>广州博纳信息技术有限公司</view>
						<view>{{item.provinceName}}{{item.cityName}}{{item.cityName}}{{item.addressdetail}}</view>
					</view>
					<view class="margin-lr-sm" style="border-bottom:1px solid #eee;"></view>
					<view class="flex justify-between align-center padding-sm">
						<view>
							<text class="cuIcon-{{item.check?'roundcheckfill':'round'}}"></text>
							设置默认寄件地址</view>
						<view>
							<text class="margin-right">编辑</text>
							<text bindtap="deleteAddress" data-id="{{item.id}}">删除</text>
						</view>
					</view>
				</view>
			</view>
			<!-- <view class='cu-tabbar-height'></view> -->
		</scroll-view>
		<view class="cu-bar foot tar bg-white">
			<button bindtap="addAddress" data-type="0" class="cu-btn bg-redOrange round">新增地址</button>
		</view>
	</view>
</view>

<view>
	<!-- 弹窗遮罩层 -->
	<view wx:if="{{isShowCouponPopUp}}" class="popover-mask-layer"></view>
	<!-- 优惠劵弹窗 //用hidden而不用wx:if原因是hidden条件不成立时候也会加载图片-->
	<view class="coupon-pop-up" catchtouchmove="onPreventTouchMove" animation="{{animationData}}">
		<view class="body">

			<view class="mid-coupons">
				<view class="">
					<scroll-view scroll-y="true">
						<block wx:for="{{couponArr}}" for-index="index" wx:key="index">
							<view class="margin-tb-sm">
								<view class="bg-white flex padding-sm" style="border-radius:7px">
									<view>
										<image style="height:100rpx;width:100rpx" src="https://img.alicdn.com/imgextra/i4/1073981443/O1CN01KqpPDj1MWw875IBq2_!!1073981443.png"></image>
									</view>
									<view class="flex justify-between align-center" style="width:100%">
										<view class="margin-left">
											<view class="text-bold text-lg">{{item.CouponName}}</view>
											<view class="text-gray text-sm">{{item.CouponTypeName}}</view>
											<view class="text-gray text-sm">自领取后7日内有效</view>
										</view>
										<view class="text-center">
											<view><text class="text-red text-bold text-xl text-price">{{item.CouponMoney}}</text></view>
											<view bindtap="getCoupons" data-index="{{index}}" wx:if="{{!item.HasItBeenClaimed}}">
												<text class="cu-tag round bg-orange">立即领取</text>
											</view>
											<view bindtap="alreadyReceived" wx:if="{{item.HasItBeenClaimed}}">
												<text class="cu-tag round bg-gray">领取成功</text>
											</view>
										</view>
									</view>
								</view>
							</view>
						</block>
					</scroll-view>
				</view>
				<view class="flex justify-center  padding">
					<button bindtap="getAllCoupons" class="round bg-yellow cu-btn">全部领取</button>
				</view>
			</view>
			<view class="flex justify-center margin-top-sm">
				<view class="" bindtap="closeTheCouponPopUp">
					<image mode="aspectFit" style="height:80rpx;height:80rpx" src="https://img.alicdn.com/imgextra/i4/1073981443/O1CN01XuixxR1MWw7zprABv_!!1073981443.png"></image>
				</view>
			</view>
		</view>
	</view>
</view>