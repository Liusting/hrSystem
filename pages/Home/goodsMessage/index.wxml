<cu-custom isBack="{{true}}" bgColor="bg-white">
	<view slot="backText"></view>
	<view slot="content" class="text-bold text-black">物品信息</view>
</cu-custom>
<scroll-view scroll-y style="height:{{deviceH-CustomBar}}px">
	<view class="margin-sm padding bg-white" style="border-radius:7px">
		<view class="flex justify-between">
			<view class="text-bold text-lg">物品类型</view>
			<view>
				<text>违禁物品</text>
				<text class="cuIcon-questionfill text-redOrange"></text>
			</view>
		</view>
		<view class="col-3 grid margin-top-sm">
			<view wx:for="{{goodsType}}" wx:key="{{index}}">
				<view class="text-center padding-tb-sm">
					<view bindtap="ChooseCheckbox" data-value="{{item.value}}" class="cu-btn {{item.checked?'line-red':'line-gray'}} round">{{item.name}}</view>
				</view>
			</view>
		</view>
	</view>

	<view class="margin-sm padding bg-white" style="border-radius:7px">
		<view class="flex justify-between padding-bottom" style="border-bottom:1px solid #eee">
			<text>物品数量</text>
			<view>
				<view class="cu-tag margin-right-sm">
					<text class="cuIcon-move"></text>
				</view>
				<view class="cu-tag1">
					<input style="width:40rpx" value="1"></input>
					<text>件</text>
				</view>
				<view class="cu-tag1 margin-left-sm">
					<text class="cuIcon-add"></text>
				</view>
			</view>
		</view>
		<view class="flex justify-between padding-tb" style="border-bottom:1px solid #eee">
			<text>预估重量</text>
			<view>
				<view class="cu-tag margin-right-sm">
					<text class="cuIcon-move"></text>
				</view>
				<view class="cu-tag1">
					<input style="width:40rpx" value="1"></input>
					<text>kg</text>
				</view>
				<view class="cu-tag1 margin-left-sm">
					<text class="cuIcon-add"></text>
				</view>
			</view>
		</view>
		<view class="flex justify-between padding-top">
			<text>预估体积</text>
			<view>
				<view class="cu-tag margin-right-sm">
					<text class="cuIcon-move"></text>
				</view>
				<view class="cu-tag1">
					<input style="width:40rpx" value="1"></input>
					<text>m³</text>
				</view>
				<view class="cu-tag1 margin-left-sm">
					<text class="cuIcon-add"></text>
				</view>
			</view>
		</view>
	</view>

	<view class="margin-sm padding bg-white" style="border-radius:7px">
		<view class="flex justify-start">
			<view class="text-bold text-lg">物品照片和备注(非必填)</view>
		</view>
		<view class="margin-top-sm">
			<view class="grid col-4 grid-square flex-sub">
				<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
					<image src='{{imgList[index]}}' mode='aspectFill'></image>
					<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
						<text class="cuIcon-close"></text>
					</view>
				</view>
				<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
					<text class="cuIcon-cameraadd"></text>
				</view>
			</view>
		</view>
		<view class="padding-sm" style="width:100%;height:200rpx;border-radius:7px;background-color: #eee">
			<textarea style="height:140rpx;width:100%" placeholder="请填写备注信息" bindinput="inputs" minlength="{{min}}" maxlength="{{max}}"></textarea>
			<view class="flex justify-end">{{currentWordNumber|0}}/{{max}}
			</view>
		</view>
	</view>
	<view class='cu-tabbar-height'></view>
</scroll-view>
<view class="cu-bar foot tar bg-white">
	<button class="cu-btn bg-red round">确定</button>
</view>